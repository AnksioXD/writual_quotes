{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "WritualQuotes",
    "version": "0.1.0",
    "identifier": "com.writualquotes.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Writual Quotes",
                "width": 360,
                "height": 485,
                "resizable": false,
                "fullscreen": false,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.ico"
        ]
    }
}